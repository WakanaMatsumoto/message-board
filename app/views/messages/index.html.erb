<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>

    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>

    <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></span>
        <%= f.text_field :name, class:"form-control", placeholder: "名前を入力"  %>
    </div>

    <div class="form-group">
        <%= f.text_area :body, class: "form-control", placeholder: "コメントを入力" %>
    </div>

    <%= f.submit "コメントする", class: "btn btn-primary btn-lg btn-block" %>
<% end %>